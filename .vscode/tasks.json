{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "silent",
    "tasks": [
        {
            "taskName": "install dependencies",
            "suppressTaskName": true,
            "args": [
                "npm",
                "install"
            ]
        },
        {
            "taskName": "build",
            "suppressTaskName": true,
            "args": [
                "npm",
                "run",
                "build"
            ]
        },
        {
            "taskName": "lint",
            "suppressTaskName": true,
            "args": [
                "npm",
                "run",
                "lint"
            ]
        },
        {
            "taskName": "unit test",
            "suppressTaskName": true,
            "args": [
                "npm",
                "run",
                "test:unit"
            ]
        },
        {
            "taskName": "component test",
            "suppressTaskName": true,
            "args": [
                "npm",
                "run",
                "test:component"
            ]
        },
        {
            "taskName": "enforce unit coverage",
            "suppressTaskName": true,
            "args": [
                "npm",
                "run",
                "coverage:enforce"
            ]
        },
        {
            "taskName": "open unit coverage",
            "suppressTaskName": true,
            "args": [
                "npm",
                "run",
                "coverage:open"
            ]
        }
    ]
}