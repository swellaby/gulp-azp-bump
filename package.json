{
  "name": "gulp-vsts-bump",
  "description": "Gulp plugin to support bumping VSTS task manifests",
  "version": "0.1.6",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "url": "https://github.com/swellaby/gulp-vsts-bump.git",
    "type": "git"
  },
  "author": {
    "name": "Swellaby",
    "email": "opensource@swellaby.com",
    "url": "http://swellaby.com"
  },
  "contributors": [
    {
      "name": "Caleb Cartwright",
      "url": "https://github.com/calebcartwright"
    }
  ],
  "keywords": [
    "gulpplugin",
    "gulp",
    "vsts",
    "bump",
    "gulp vsts",
    "gulp-vsts",
    "vsts-bump"
  ],
  "scripts": {
    "build": "npm run lint && npm run coverage:enforce && npm run coverage:component:enforce",
    "clean": "rimraf .testresults && rimraf .coverage",
    "coverage": "nyc --nycrc-path config/unit/.nycrc --check-coverage false npm run test:unit",
    "coverage:enforce": "nyc --nycrc-path config/unit/.nycrc npm run test:unit",
    "coverage:open": "npm run coverage && opn .coverage/unit/index.html",
    "coverage:component": "nyc --nycrc-path config/component/.nycrc --check-coverage false npm run test:component",
    "coverage:component:enforce": "nyc --nycrc-path config/component/.nycrc npm run test:component",
    "coverage:component:open": "npm run coverage:component && opn .coverage/component/index.html",
    "lint": "eslint --ignore-path config/.eslintignore -c config/.eslintrc.js ./**/*.js",
    "test": "npm run test:unit",
    "test:all": "npm run test:unit && npm run test:component",
    "test:component": "mocha --opts config/component/mocha.opts",
    "test:unit": "mocha --opts config/unit/mocha.opts",
    "dev:reset": "npm i -g rimraf && npm run clean && rimraf node_modules && npm install",
    "dev:setup": "npm i -g rimraf && npm install && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "devDependencies": {
    "@swellaby/nyc-config-complete-coverage": "0.0.5",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "husky": "^0.15.0-rc.13",
    "mocha": "^5.0.5",
    "mocha-multi-reporters": "^1.1.7",
    "mocha-sonarqube-reporter": "^1.0.1",
    "nyc": "^11.6.0",
    "opn-cli": "^3.1.0",
    "sinon": "^4.4.8",
    "vinyl": "^2.1.0"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "fancy-log": "^1.3.2",
    "plugin-error": "^1.0.1",
    "semver": "^5.5.0",
    "through2": "^2.0.3"
  }
}
