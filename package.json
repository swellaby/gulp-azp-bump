{
  "name": "gulp-vsts-bump",
  "description": "Gulp plugin to support bumping VSTS task manifests",
  "version": "1.0.24",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "url": "https://github.com/swellaby/gulp-vsts-bump",
    "type": "git"
  },
  "author": {
    "name": "Swellaby",
    "email": "opensource@swellaby.com",
    "url": "http://swellaby.com"
  },
  "contributors": [
    {
      "name": "Caleb Cartwright",
      "url": "https://github.com/calebcartwright"
    }
  ],
  "keywords": [
    "gulpplugin",
    "gulp",
    "vsts",
    "bump",
    "gulp vsts",
    "gulp-vsts",
    "vsts-bump"
  ],
  "scripts": {
    "build": "npm run lint && npm run coverage:enforce && npm run coverage:component:enforce",
    "clean": "rimraf .testresults .coverage .nyc_output",
    "clean:unit": "rimraf .testresults/unit .coverage/unit",
    "clean:component": "rimraf .testresults/component .coverage/component",
    "coverage": "nyc --nycrc-path config/unit/.nycrc --check-coverage false npm run test:unit",
    "coverage:enforce": "nyc --nycrc-path config/unit/.nycrc npm run test:unit",
    "coverage:open": "npm run coverage && opn .coverage/unit/index.html",
    "coverage:component": "nyc --nycrc-path config/component/.nycrc --check-coverage false npm run test:component",
    "coverage:component:enforce": "nyc --nycrc-path config/component/.nycrc npm run test:component",
    "coverage:component:open": "npm run coverage:component && opn .coverage/component/index.html",
    "lint": "eslint **/*.js",
    "test": "npm run test:unit",
    "test:all": "npm run test:unit && npm run test:component",
    "test:component": "npm run clean:component && mocha --opts config/component/mocha.opts",
    "test:unit": "npm run clean:unit && mocha --opts config/unit/mocha.opts",
    "version:tagless": "npm --no-git-tag-version version patch",
    "prepublish:local": "npm run version:tagless && npm run build",
    "publish:local": "npm publish --access public",
    "dev:reset": "npm run clean && node -e \"require('rimraf').sync('node_modules');\" && npm run dev:setup",
    "dev:setup": "npm install && npm run build"
  },
  "devDependencies": {
    "@swellaby/eslint-config": "^1.1.6",
    "@swellaby/nyc-config": "^1.0.12",
    "chai": "^4.1.2",
    "eslint": "^5.2.0",
    "husky": "^1.0.0-rc.13",
    "mocha": "^5.2.0",
    "mocha-multi-reporters": "^1.1.7",
    "mocha-sonarqube-reporter": "^1.0.1",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.4",
    "vinyl": "^2.2.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "fancy-log": "^1.3.2",
    "plugin-error": "^1.0.1",
    "semver": "^5.5.0",
    "through2": "^2.0.3"
  }
}
